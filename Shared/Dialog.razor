@using static Pages.Index

<MudDialog DisableSidePadding="true">
    <DialogContent>

    <MudContainer Style="max-height: 900px; overflow-y: scroll">
        <MudItem Class="d-inline-flex">
            <MudImage Src=@Src Width="900" Alt=@Alt Elevation="25" Class="rounded-lg"/>
        </MudItem>
    </MudContainer>

    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string Src { get; set; }
    [Parameter] public BeerData BeerData {get; set; }
    private string Alt => $"Missing image for {BeerData.Name}"; 
    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}